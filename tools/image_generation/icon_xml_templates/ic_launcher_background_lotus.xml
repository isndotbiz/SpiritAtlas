<?xml version="1.0" encoding="utf-8"?>
<!--
  SpiritAtlas App Icon - Gradient Lotus Background Layer

  This is the background layer for the adaptive icon.
  Features a cosmic gradient (purple to black) with subtle golden glow.

  Size: 108x108dp (full canvas)
  Safe zone: Content should stay within 66x66dp center
-->
<vector xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aapt="http://schemas.android.com/aapt"
    android:width="108dp"
    android:height="108dp"
    android:viewportWidth="108"
    android:viewportHeight="108">

    <!-- Cosmic gradient background (purple to near-black) -->
    <path android:pathData="M0,0h108v108h-108z">
        <aapt:attr name="android:fillColor">
            <gradient
                android:type="linear"
                android:angle="135">
                <item android:offset="0" android:color="#1A0B2E" />
                <item android:offset="0.5" android:color="#140923" />
                <item android:offset="1" android:color="#0A051A" />
            </gradient>
        </aapt:attr>
    </path>

    <!-- Subtle golden glow radiating from center -->
    <path android:pathData="M 54,54 m -35,0 a 35,35 0 1,0 70,0 a 35,35 0 1,0 -70,0">
        <aapt:attr name="android:fillColor">
            <gradient
                android:type="radial"
                android:centerX="54"
                android:centerY="54"
                android:gradientRadius="35">
                <item android:offset="0" android:color="#26FFD700" />
                <item android:offset="0.6" android:color="#10FFD700" />
                <item android:offset="1" android:color="#00FFD700" />
            </gradient>
        </aapt:attr>
    </path>

    <!-- Optional: Scattered star particles for cosmic feel -->
    <path
        android:fillColor="#FFFFFF"
        android:fillAlpha="0.4"
        android:pathData="M20,20 L20.8,20 L20.8,20.8 L20,20.8 Z" />
    <path
        android:fillColor="#FFFFFF"
        android:fillAlpha="0.6"
        android:pathData="M88,25 L88.8,25 L88.8,25.8 L88,25.8 Z" />
    <path
        android:fillColor="#FFFFFF"
        android:fillAlpha="0.3"
        android:pathData="M25,85 L25.8,85 L25.8,85.8 L25,85.8 Z" />
    <path
        android:fillColor="#FFFFFF"
        android:fillAlpha="0.5"
        android:pathData="M85,82 L85.8,82 L85.8,82.8 L85,82.8 Z" />
</vector>
