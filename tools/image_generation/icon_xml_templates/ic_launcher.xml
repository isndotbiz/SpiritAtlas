<?xml version="1.0" encoding="utf-8"?>
<!--
  SpiritAtlas App Icon - Adaptive Icon Configuration

  This file should be placed in: app/src/main/res/mipmap-anydpi-v26/

  It references the foreground, background, and monochrome layers.
  The system will combine these layers and apply the appropriate mask
  (circle, squircle, rounded square) based on the device/launcher.
-->
<adaptive-icon xmlns:android="http://schemas.android.com/apk/res/android">
    <background android:drawable="@drawable/ic_launcher_background_lotus" />
    <foreground android:drawable="@drawable/ic_launcher_foreground_lotus" />
    <monochrome android:drawable="@drawable/ic_launcher_monochrome_lotus" />
</adaptive-icon>
