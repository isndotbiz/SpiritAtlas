<?xml version="1.0" encoding="utf-8"?>
<!--
  SpiritAtlas App Icon - Gradient Lotus Foreground Layer

  This is the foreground layer for the adaptive icon.
  Features a stylized 8-petal lotus with vertical gradient:
  purple (bottom) → pink → orange → gold → white (top)

  Size: 108x108dp (full canvas)
  Safe zone: Main content stays within 66x66dp center (petals 42-66 range)
-->
<vector xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aapt="http://schemas.android.com/aapt"
    android:width="108dp"
    android:height="108dp"
    android:viewportWidth="108"
    android:viewportHeight="108">

    <!-- Center circle: Lotus seed pod (golden) -->
    <path android:pathData="M 54,49 A 5,5 0 1,1 54,59 A 5,5 0 1,1 54,49 Z">
        <aapt:attr name="android:fillColor">
            <gradient
                android:type="radial"
                android:centerX="54"
                android:centerY="54"
                android:gradientRadius="5">
                <item android:offset="0" android:color="#FFFFFF" />
                <item android:offset="0.3" android:color="#FFD700" />
                <item android:offset="1" android:color="#FFA500" />
            </gradient>
        </aapt:attr>
    </path>

    <!-- Bottom Petal (South) - Deep Purple -->
    <path android:pathData="M 54,68 Q 48,65 47,58 Q 47,53 50,50 L 54,54 L 58,50 Q 61,53 61,58 Q 60,65 54,68 Z">
        <aapt:attr name="android:fillColor">
            <gradient
                android:type="linear"
                android:startX="54" android:startY="68"
                android:endX="54" android:endY="50">
                <item android:offset="0" android:color="#2E1B5B" />
                <item android:offset="1" android:color="#673AB7" />
            </gradient>
        </aapt:attr>
    </path>

    <!-- Bottom-Right Petal (SE) - Purple to Pink -->
    <path android:pathData="M 64,64 Q 68,62 71,57 Q 72,52 70,48 L 58,54 L 64,58 Z">
        <aapt:attr name="android:fillColor">
            <gradient
                android:type="linear"
                android:startX="71" android:startY="64"
                android:endX="58" android:endY="48">
                <item android:offset="0" android:color="#673AB7" />
                <item android:offset="1" android:color="#9C27B0" />
            </gradient>
        </aapt:attr>
    </path>

    <!-- Right Petal (East) - Pink -->
    <path android:pathData="M 68,54 Q 71,50 75,49 Q 79,49 82,52 Q 83,56 81,60 L 58,54 L 68,54 Z">
        <aapt:attr name="android:fillColor">
            <gradient
                android:type="linear"
                android:startX="82" android:startY="54"
                android:endX="58" android:endY="54">
                <item android:offset="0" android:color="#E91E63" />
                <item android:offset="1" android:color="#FF6B9D" />
            </gradient>
        </aapt:attr>
    </path>

    <!-- Top-Right Petal (NE) - Pink to Orange -->
    <path android:pathData="M 64,44 Q 68,46 71,51 Q 72,56 70,60 L 58,54 L 64,50 Z">
        <aapt:attr name="android:fillColor">
            <gradient
                android:type="linear"
                android:startX="71" android:startY="60"
                android:endX="58" android:endY="44">
                <item android:offset="0" android:color="#FF6B9D" />
                <item android:offset="1" android:color="#FF8A65" />
            </gradient>
        </aapt:attr>
    </path>

    <!-- Top Petal (North) - Orange to Gold -->
    <path android:pathData="M 54,40 Q 48,43 47,50 Q 47,55 50,58 L 54,54 L 58,58 Q 61,55 61,50 Q 60,43 54,40 Z">
        <aapt:attr name="android:fillColor">
            <gradient
                android:type="linear"
                android:startX="54" android:startY="58"
                android:endX="54" android:endY="40">
                <item android:offset="0" android:color="#FFA500" />
                <item android:offset="1" android:color="#FFD700" />
            </gradient>
        </aapt:attr>
    </path>

    <!-- Top-Left Petal (NW) - Gold to White -->
    <path android:pathData="M 44,44 Q 40,46 37,51 Q 36,56 38,60 L 50,54 L 44,50 Z">
        <aapt:attr name="android:fillColor">
            <gradient
                android:type="linear"
                android:startX="37" android:startY="60"
                android:endX="50" android:endY="44">
                <item android:offset="0" android:color="#FFD700" />
                <item android:offset="1" android:color="#FFFACD" />
            </gradient>
        </aapt:attr>
    </path>

    <!-- Left Petal (West) - Golden White -->
    <path android:pathData="M 40,54 Q 37,50 33,49 Q 29,49 26,52 Q 25,56 27,60 L 50,54 L 40,54 Z">
        <aapt:attr name="android:fillColor">
            <gradient
                android:type="linear"
                android:startX="26" android:startY="54"
                android:endX="50" android:endY="54">
                <item android:offset="0" android:color="#FFFACD" />
                <item android:offset="1" android:color="#FFFFFF" />
            </gradient>
        </aapt:attr>
    </path>

    <!-- Bottom-Left Petal (SW) - White gradient -->
    <path android:pathData="M 44,64 Q 40,62 37,57 Q 36,52 38,48 L 50,54 L 44,58 Z">
        <aapt:attr name="android:fillColor">
            <gradient
                android:type="linear"
                android:startX="37" android:startY="64"
                android:endX="50" android:endY="48">
                <item android:offset="0" android:color="#FFFFFF" />
                <item android:offset="1" android:color="#FFFACD" />
            </gradient>
        </aapt:attr>
    </path>

    <!-- Subtle white highlights on upper petals for depth -->
    <path
        android:fillColor="#FFFFFF"
        android:fillAlpha="0.3"
        android:pathData="M 54,42 Q 52,43 51,46 Q 51,48 52,49 L 54,47 L 56,49 Q 57,48 57,46 Q 56,43 54,42 Z" />

</vector>
